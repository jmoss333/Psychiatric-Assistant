# ML Engine Environment Configuration

# Server Configuration
ENV=development
ML_PORT=5000
BACKEND_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smart_communicator
DB_USER=postgres
DB_PASSWORD=your_password_here

# ML Model Configuration
MODEL_VERSION=phase2_v1
CONFIDENCE_THRESHOLD=0.5

# Model Paths (relative to ml-engine directory)
BIOBERT_MODEL_PATH=models/trained/biobert_classifier.bin
LIGHTGBM_MODEL_PATH=models/trained/lgb_recommender.pkl
NEURAL_NET_MODEL_PATH=models/trained/outcome_predictor.h5

# Training Configuration (for Phase 2B: Model Training)
TRAINING_DATA_PATH=data/training_data.csv
VALIDATION_SPLIT=0.2
TEST_SPLIT=0.1
RANDOM_SEED=42

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ml_engine.log
